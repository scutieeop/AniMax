            <i class="fas fa-home"></i>
            <span>Ana Sayfa</span>
        </a>
        <a href="/animeler" class="nav-link <%= path === '/animeler' ? 'active' : '' %>">
            <i class="fas fa-compass"></i>
            <span>Keşfet</span>
        </a>
        <a href="/populer" class="nav-link <%= path === '/populer' ? 'active' : '' %>">
            <i class="fas fa-fire"></i>
            <span>Popüler</span>
        </a>
        <a href="/yeni" class="nav-link <%= path === '/yeni' ? 'active' : '' %>">
            <i class="fas fa-star"></i>
            <span>Yeni</span>
        </a>
        <a href="/yenibolumler" class="nav-link <%= path === '/yenibolumler' ? 'active' : '' %>">
            <i class="fas fa-bell"></i>
            <span>Yeni Bölüm</span>
        </a>
    </div>

    <!-- Kullanıcı Bölümü -->
    <div class="mt-auto border-t border-[rgba(255,255,255,0.1)] pt-4">
        <% if (user) { %>
            <div class="flex items-center gap-3 px-4 py-2 mb-2">
                <img src="<%= user.avatar %>" alt="<%= user.username %>" class="w-10 h-10 rounded-full border-2 border-blue-500">
                <div class="flex flex-col">
                    <span class="font-semibold"><%= user.username %></span>
                    <% if (user.roles) { %>
                        <% if (user.roles.includes('founder')) { %>
                            <span class="text-sm text-blue-400">Kurucu</span>
                        <% } else if (user.roles.includes('admin')) { %>
                            <span class="text-sm text-red-400">Admin</span>
                        <% } else if (user.roles.includes('contributor')) { %>
                            <span class="text-sm text-green-400">Paylaşımcı</span>
                        <% } else if (user.roles.includes('guide')) { %>
                            <span class="text-sm text-yellow-400">Rehber</span>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <a href="/profile" class="nav-link">
                <i class="fas fa-user"></i>
                <span>Hesabım</span>
            </a>
           
            <a href="/auth/logout" class="nav-link text-red-500 hover:text-red-400">
                <i class="fas fa-sign-out-alt"></i>
                <span>Çıkış Yap</span>
            </a>
        <% } else { %>
            <a href="/auth/discord" class="nav-link">
                <i class="fab fa-discord"></i>
                <span>Discord ile Giriş Yap</span>
            </a>
        <% } %>
    </div>
</nav>

<nav class="md:hidden fixed bottom-0 left-0 right-0 bg-[rgba(17,24,39,0.95)] backdrop-blur-md border-t border-[rgba(255,255,255,0.1)] z-[100] px-2 py-1">
    <div class="flex justify-around items-center">
        <a href="/" class="mobile-nav-link <%= path === '/' ? 'active' : '' %>">
            <i class="fas fa-home"></i>
            <span>Ana Sayfa</span>
        </a>
        <a href="/animeler" class="mobile-nav-link <%= path === '/animeler' ? 'active' : '' %>">
            <i class="fas fa-compass"></i>
            <span>Keşfet</span>
        </a>
        <a href="/populer" class="mobile-nav-link <%= path === '/populer' ? 'active' : '' %>">
            <i class="fas fa-fire"></i>
            <span>Popüler</span>
        </a>
        <a href="/yeni" class="mobile-nav-link <%= path === '/yeni' ? 'active' : '' %>">
            <i class="fas fa-star"></i>
            <span>Yeni</span>
        </a>
        <a href="/yenibolumler" class="mobile-nav-link <%= path === '/yenibolumler' ? 'active' : '' %>">
            <i class="fas fa-bell"></i>
            <span>Yeni Bölüm</span>
        </a>
        
        <% if (user) { %>
            <div class="relative group">
                <button class="mobile-nav-link">
                    <img src="<%= user.avatar %>" alt="<%= user.username %>" class="w-6 h-6 rounded-full">
                    <span>Profil</span>
                </button>
                <div class="absolute bottom-full right-0 mb-2 w-48 bg-[rgba(17,24,39,0.98)] backdrop-blur-md rounded-lg shadow-lg border border-[rgba(255,255,255,0.1)] hidden group-hover:block">
                    <div class="p-2 border-b border-[rgba(255,255,255,0.1)]">
                        <div class="flex items-center gap-2">
                            <img src="<%= user.avatar %>" alt="<%= user.username %>" class="w-8 h-8 rounded-full">
                            <div class="flex flex-col">
                                <span class="text-sm font-semibold"><%= user.username %></span>
                                <% if (user.roles) { %>
                                    <% if (user.roles.includes('founder')) { %>
                                        <span class="text-xs text-blue-400">Kurucu</span>
                                    <% } else if (user.roles.includes('admin')) { %>
                                        <span class="text-xs text-red-400">Admin</span>
                                    <% } else if (user.roles.includes('contributor')) { %>
                                        <span class="text-xs text-green-400">Paylaşımcı</span>
                                    <% } else if (user.roles.includes('guide')) { %>
                                        <span class="text-xs text-yellow-400">Rehber</span>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <a href="/profile" class="block px-4 py-2 hover:bg-[rgba(255,255,255,0.1)] transition-colors">
                        <i class="fas fa-user mr-2"></i>Hesabım
                    </a>
                   
                    <a href="/auth/logout" class="block px-4 py-2 text-red-500 hover:bg-[rgba(255,255,255,0.1)] transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap
                    </a>
                </div>
            </div>
        <% } else { %>
            <a href="/auth/discord" class="mobile-nav-link">
                <i class="fab fa-discord"></i>
                <span>Giriş</span>
            </a>
        <% } %>
    </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('menuButton');
    const sideNav = document.querySelector('.side-nav');
    const menuOverlay = document.getElementById('menuOverlay');

    function toggleMenu(e) {
        if (e) {
            e.stopPropagation();
        }
        sideNav.classList.toggle('active');
        menuOverlay.classList.toggle('hidden');
        document.body.classList.toggle('overflow-hidden');
    }

    // Menü butonu tıklama olayı
    if (menuButton) {
        menuButton.addEventListener('click', toggleMenu);
    }

    // Overlay tıklama olayı
    if (menuOverlay) {
        menuOverlay.addEventListener('click', toggleMenu);
    }

    // ESC tuşu ile menüyü kapatma
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && sideNav.classList.contains('active')) {
            toggleMenu();
        }
    });

    // Sayfa yüklendiğinde menüyü kapat
    sideNav.classList.remove('active');
    menuOverlay.classList.add('hidden');

    // Ekran döndürme olayını dinle
    window.addEventListener('orientationchange', () => {
        if (sideNav.classList.contains('active')) {
            toggleMenu();
        }
    });

    // Link tıklamalarında menüyü kapat
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', () => {
            if (window.innerWidth <= 1024 && sideNav.classList.contains('active')) {
                toggleMenu();
            }
        });
    });

    // Mobil profil menüsü için dokunmatik cihaz desteği
    const profileButton = document.querySelector('.mobile-nav-link button');
    if (profileButton) {
        profileButton.addEventListener('touchstart', function(e) {
            e.preventDefault();
            const dropdown = this.parentElement.querySelector('div');
            dropdown.classList.toggle('hidden');
        });

        // Dropdown dışına tıklandığında menüyü kapat
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.group')) {
                const dropdowns = document.querySelectorAll('.group div');
                dropdowns.forEach(dropdown => dropdown.classList.add('hidden'));
            }
        });
    }
});
</script> 