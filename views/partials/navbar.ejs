<!-- Yan Menü -->
<style>
.side-nav {
    width: 250px;
    height: 100vh;
    position: fixed;
    left: 10;
    top: 0;
    background: rgba(17, 24, 39, 0.98);
    backdrop-filter: blur(20px);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    z-index: 95;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    color: rgba(255, 255, 255, 0.8);
    border-radius: 8px;
    transition: all 0.3s ease;
    margin-bottom: 0.5rem;
}

.nav-link:hover {
    background: rgba(59, 130, 246, 0.1);
    color: white;
    transform: translateX(5px);
}

.nav-link.active {
    background: #3b82f6;
    color: white;
}

.logo-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 3rem;
}

.logo-section i {
    font-size: 2rem;
    color: #3b82f6;
}

.logo-section span {
    font-size: 1.5rem;
    font-weight: 600;
    background: linear-gradient(to right, #3b82f6, #60a5fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

@media (max-width: 1024px) {
    .side-nav {
        transform: translateX(-100%);
    }

    .side-nav.active {
        transform: translateX(0);
    }
}

@media (max-width: 768px) {
    .side-nav {
        width: 100%;
        padding: 4rem 1.5rem 2rem 1.5rem;
    }

    .nav-link {
        padding: 1.2rem;
        font-size: 1.1rem;
    }
}
</style>

<!-- Mobil Alt Menü -->
<style>
.mobile-nav-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
    padding: 0.5rem;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    font-size: 0.75rem;
    text-align: center;
    min-width: 60px;
    position: relative;
}

.mobile-nav-link i {
    font-size: 1.25rem;
    margin-bottom: 0.2rem;
}

.mobile-nav-link.active {
    color: #3b82f6;
}

.mobile-nav-link:hover {
    color: white;
}

.mobile-nav-link img {
    border: 2px solid transparent;
    transition: all 0.3s ease;
}

.mobile-nav-link:hover img {
    border-color: #3b82f6;
}

@media (max-width: 480px) {
    .mobile-nav-link {
        font-size: 0.7rem;
        min-width: 50px;
        padding: 0.4rem;
    }

    .mobile-nav-link i {
        font-size: 1.1rem;
    }
}
</style>

<!-- Mobil Menü Overlay -->
<div id="menuOverlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[90] hidden lg:hidden"></div>

<!-- Yan Menü -->
