<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AniMax</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- F12 ve Geliştirici Araçları Engelleme -->
    <script>
        // DevTools durumunu kontrol et
        let isDevToolsOpen = false;

        // DevTools açık mı kontrol et
        function checkDevTools() {
            const threshold = 160;
            const widthThreshold = window.outerWidth - window.innerWidth > threshold;
            const heightThreshold = window.outerHeight - window.innerHeight > threshold;
            
            if (widthThreshold || heightThreshold) {
                if (!isDevToolsOpen) {
                    isDevToolsOpen = true;
                    handleDevTools();
                }
            } else {
                isDevToolsOpen = false;
            }
        }

        // DevTools açıldığında yapılacak işlemler
        function handleDevTools() {
            // Sayfayı gizle
            document.documentElement.style.display = 'none';
            
            // Uyarı sayfasına yönlendir
            window.location.href = '/devtools-blocked';
            
            // Local storage'a devtools kullanım denemesi kaydet
            localStorage.setItem('devToolsAttempt', Date.now());
        }

        // F12 ve diğer kısayolları engelle
        document.addEventListener('keydown', function(e) {
            if (e.key === 'F12' || 
                (e.ctrlKey && e.shiftKey && e.key === 'I') || 
                (e.ctrlKey && e.shiftKey && e.key === 'J') || 
                (e.ctrlKey && e.shiftKey && e.key === 'C') ||
                (e.ctrlKey && e.key === 'U')) {
                e.preventDefault();
                handleDevTools();
            }
        });

        // Sağ tıklamayı engelle
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
        });

        // DevTools açılmasını sürekli kontrol et
        setInterval(checkDevTools, 1000);

        // Console'u devre dışı bırak
        Object.defineProperty(window, 'console', {
            value: {
                log: function() {},
                warn: function() {},
                error: function() {},
                debug: function() {}
            },
            writable: false,
            configurable: false
        });

        // Sayfa yüklendiğinde DevTools kontrolü
        window.addEventListener('load', function() {
            // Önceki DevTools kullanım denemesi varsa kontrol et
            const lastAttempt = localStorage.getItem('devToolsAttempt');
            if (lastAttempt) {
                const timeDiff = Date.now() - parseInt(lastAttempt);
                // Son 1 saat içinde deneme yapıldıysa
                if (timeDiff < 3600000) {
                    handleDevTools();
                } else {
                    localStorage.removeItem('devToolsAttempt');
                }
            }

            // Başlangıç kontrolü
            checkDevTools();
        });

        // Debug modunu engelle
        (() => {
            function ban() {
                handleDevTools();
            }
            
            // Debug fonksiyonlarını izle
            const methods = [
                'debug',
                'dirxml',
                'profile',
                'profileEnd',
                'clear'
            ];
            
            methods.forEach((method) => {
                console[method] = ban;
            });
        })();
    </script>

    <style>
        .top-header {
            background: rgba(19, 20, 31, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 50;
            transition: all 0.3s ease;
        }

        .top-header.scrolled {
            background: rgba(19, 20, 31, 0.95);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

        .logo-container img {
            height: 48px;
            width: auto;
            transition: all 0.3s ease;
        }

        .top-header.scrolled .logo-container img {
            height: 40px;
        }

        @media (max-width: 768px) {
            .logo-container img {
                height: 40px;
            }
            .top-header.scrolled .logo-container img {
                height: 36px;
            }
        }
    </style>
</head>
<body class="bg-[#0f172a] text-white min-h-screen">
    <!-- Üst Header -->
    <header class="top-header">
        <div class="container mx-auto px-4 py-2">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <a href="/" class="logo-container flex items-center gap-2">
                    <img src="/foto/animax.png" alt="AniMax Logo" class="object-contain">
                </a>

                <!-- Sağ Menü -->
                <div class="flex items-center gap-4">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <a href="/profile" class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-blue-500/10 hover:bg-blue-500/20 transition-all">
                            <img src="<%= user.discordAvatar || user.avatar || '/images/default-avatar.png' %>" 
                                alt="<%= user.username %>" 
                                class="w-8 h-8 rounded-full border-2 border-blue-500/50">
                            <span class="text-sm font-medium hidden sm:block"><%= user.username %></span>
                        </a>
                    <% } else { %>
                        <a href="/auth/login" class="flex items-center gap-2 px-4 py-2 rounded-full bg-blue-500 hover:bg-blue-600 transition-colors">
                            <i class="fab fa-discord"></i>
                            <span class="text-sm font-medium">Giriş Yap</span>
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <!-- Header için boşluk -->
    <div class="pt-16">
        <!-- Sayfa içeriği buraya gelecek -->
    </div>

    <script>
        // Scroll olduğunda header'ı güncelle
        window.addEventListener('scroll', () => {
            const header = document.querySelector('.top-header');
            if (window.scrollY > 10) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });
    </script>
</body>
</html> 